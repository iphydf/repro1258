load("@rules_haskell//haskell:defs.bzl", "haskell_library")
load("@toktok//third_party/haskell:packages.bzl", "packages")

cc_library(
    name = "cbits",
    srcs = glob([
        "cbits/*.c",
        "cbits/*.h",
    ]),
    deps = ["@haskell_rts//:rts"],
)

haskell_library(
    name = "cryptohash-sha1",
    srcs = glob(["Crypto/**/*.*hs"]),
    version = packages["cryptohash-sha1"].version,
    visibility = ["//visibility:public"],
    deps = [
        ":cbits",
        "@haskell_base//:base",
    ],
)
